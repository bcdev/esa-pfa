    <extension point="beam-ui:toolViews">

        <toolView>
            <id>org.esa.pfa.ui.toolviews.cbir.CBIRToolView</id>
            <class>org.esa.pfa.ui.toolviews.cbir.CBIRToolView</class>
            <title>CBIR</title>
            <tabTitle>CBIR</tabTitle>
            <smallIcon>/org/esa/beam/resources/images/icons/RsProduct16.gif</smallIcon>
